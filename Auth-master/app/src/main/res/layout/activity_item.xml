<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#48182F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity">

    <ImageView
        android:id="@+id/item_list_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/one" />

    <TextView
        android:id="@+id/item_list_title_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="#d4cbc4"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_list_text"
        android:layout_width="match_parent"
        android:textColor="#d4cbc4"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_light"
        android:text="TextView"
        android:textSize="17dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"/>

    <TextView
        android:id="@+id/item_list_price"
        android:layout_width="match_parent"
        android:textColor="#d4cbc4"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="TextView"
        android:textSize="19dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"/>

    <Button
        android:id="@+id/button_buy"
        android:layout_width="200dp"
        android:textColor="#48182F"
        android:layout_gravity="center"
        android:fontFamily="@font/comfortaa_bold"
        android:backgroundTint="#d4cbc4"
        android:layout_height="wrap_content"
        android:text="В корзину"/>

</LinearLayout>